{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "NODE_ENV": true,
    "VERSION": true,
    "DEPLOY": true,
    "CORDOVA": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "restParams": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "no-cond-assign": 0, // eslint:recommended
    "no-irregular-whitespace": 2, // eslint:recommended
    "no-unexpected-multiline": 2, // eslint:recommended
    "no-unneeded-ternary": 2,
    "no-nested-ternary": 2,
    "no-param-reassign": 2,
    "valid-jsdoc": [2, {
      "requireParamDescription": false,
      "requireReturn": false,
      "prefer": {"returns": "return"}
    }],
    // Best Practices
    // http://eslint.org/docs/rules/#best-practices
    // --------------------------------------------
    "guard-for-in": 2,
    "no-caller": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    //"no-invalid-this": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-new-wrappers": 2,
    "no-throw-literal": 2, // eslint:recommended
    "no-with": 2,


    // Stylistic Issues
    // http://eslint.org/docs/rules/#stylistic-issues
    // ----------------------------------------------
    "camelcase": 2,
    //"comma-dangle": [2, "always-multiline"], //??? in last property in object
    "comma-spacing": [2, {"before": false, "after": true}],
    "comma-style": 2,
    "computed-property-spacing": 2,
    "eol-last": 2,
    "func-call-spacing": 2,
    "keyword-spacing": 0,
    "linebreak-style": 0,
    "no-mixed-spaces-and-tabs": 2, // eslint:recommended
    //"no-multiple-empty-lines": [2, {"max": 2}],
    "no-trailing-spaces": 2,
    //"object-curly-spacing": ["error", "never", {"objectsInObjects" : false}],
    "one-var": [2, {
      "var": "never",
      "let": "never",
      //"const": "never"
    }],
    "padded-blocks": [2, "never"],
    "quote-props": [2, "consistent"],
    "semi-spacing": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],

    // ECMAScript 6
    // http://eslint.org/docs/rules/#ecmascript-6
    // ------------------------------------------
    "arrow-parens": [2, "as-needed", {"requireForBlockBody": true}],
    "constructor-super": 2, // eslint:recommended
    "generator-star-spacing": [2, "after"],
    "no-new-symbol": 2, // eslint:recommended
    "no-this-before-super": 2,  // eslint:recommended
    "no-var": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "rest-spread-spacing": 2,
    "yield-star-spacing": [2, "after"],

    /***** self rules ***/
    "no-extra-semi": 2,
    "no-inner-declarations": 2,
    "curly": 2,
    "no-eval": 2,
    "require-jsdoc": 0,
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "consistent-return": 0,
    "no-unused-expressions": 2,
    "new-cap": ["error"],
    "default-case": 0,
    "no-alert": 0,
    "no-console": 1,
    "no-debugger": 1,
    "no-warning-comments": 0,
    "spaced-comment": 0,
    "no-negated-condition": 0,
    "no-loop-func": 0,
    "no-lonely-if": 0,

    // Vars rules
    "no-undef": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],

    // Style rules
    "array-bracket-spacing": [2, "never"],
    "no-array-constructor": 2,
    "no-new-object": 2,
    "semi": 2,
    "eqeqeq": [2, "allow-null"],
    "no-eq-null": 0,
    "quotes": [2, "double", { "avoidEscape": true , "allowTemplateLiterals" : true}],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true, "mode": "minimum"}],
    "max-len": [2, 200, 4, {"ignoreComments": true, "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true}],

   

    // React rules
    // "react/display-name": 2,
    // "react/forbid-prop-types": 2,


    "react/no-danger": 0,
    // "react/no-did-mount-set-state": 2,
    // "react/no-did-update-set-state": 2,
    // "react/no-direct-mutation-state": 2,
    // "react/no-multi-comp": 2,
    // "react/no-set-state": 2,
    "react/no-unknown-property": 2,
    "react/no-unused-prop-types": 2,
    // "react/prefer-es6-class": 2,
    
    // "react/prop-types": 2,

    // "react/require-extension": 2,
    // "react/self-closing-comp": 2,
    // "react/sort-comp": 2,

    "react/prefer-stateless-function": 2,

    //fix for migrate to v3
    "array-callback-return": 0,
    "no-return-assign": 0,
    "no-restricted-globals": 0,
    "max-statements-per-line": 0,
    "no-case-declarations": 0,
    "no-sequences": 0
  },
  "plugins": [
    "react"
  ]
}
